          #scatter_plot_chart
          h5 Radar Chart:
          #radar_chart
          h5 Map:
          #map.map-graph
      .row#nav_tree_row
        .col-md-10
          h3 Navigation tree for regions
          #location_selector
            h5 Select Locations
            #the_tree
        .col-md-2
      .row
        .col-md-10
          h3 Dropdown filters for search
          #dropdown_sample
